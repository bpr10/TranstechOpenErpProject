<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:paddingTop="20dp"
    android:paddingLeft="10dp">
 
 
    <CheckBox
        android:id="@+id/no_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
       
        android:buttonTint="@color/primary_color"
        android:textColor="#3C3C3C"
        android:text="@string/no_comments" />
 
 
    <CheckBox
        android:id="@+id/transactional_stickers_faded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/no_comments"
        android:layout_marginTop="5dp"
        android:textColor="#3C3C3C"
         android:buttonTint="@color/primary_color"
        android:text="@string/transactional_stickers_faded" />
 
 
    <CheckBox
        android:id="@+id/collect_cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
         android:layout_marginTop="5dp"
         android:textColor="#3C3C3C"
          android:buttonTint="@color/primary_color"
        android:layout_below="@+id/transactional_stickers_faded"
        android:text="@string/collect_cash" />
 
 
    <CheckBox
        android:id="@+id/collect_receipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="#3C3C3C"
         android:buttonTint="@color/primary_color"
        android:layout_below="@+id/collect_cash"
         android:layout_marginTop="5dp"
        android:text="@string/collect_receipt" />
 
 
    <CheckBox
        android:id="@+id/insert_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="#3C3C3C"
         android:buttonTint="@color/primary_color"
         android:layout_marginTop="5dp"
        android:layout_below="@+id/collect_receipt"
        android:text="@string/insert_card" />
 
 
    <CheckBox
        android:id="@+id/insert_cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/insert_card"
        android:layout_below="@+id/insert_card"
         android:layout_marginTop="5dp"
          android:buttonTint="@color/primary_color"
         android:textColor="#3C3C3C"
        android:text="@string/insert_cash" />
 
    <CheckBox
        android:id="@+id/network_sticker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/insert_cash"
         android:layout_marginTop="5dp"
          android:buttonTint="@color/primary_color"
         android:textColor="#3C3C3C"
        android:text="@string/network_sticker" />
 
    <CheckBox
        android:id="@+id/instruction_sticker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
         android:layout_marginTop="5dp"
          android:buttonTint="@color/primary_color"
         android:textColor="#3C3C3C"
        android:layout_below="@+id/network_sticker"
        android:text="@string/instruction_sticker" />
 
 
    <CheckBox
        android:id="@+id/vault_branding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
         android:layout_marginTop="5dp"
         android:textColor="#3C3C3C"
          android:buttonTint="@color/primary_color"
        android:layout_below="@+id/instruction_sticker"
        android:text="@string/vault_branding" />
 
 
    <CheckBox
        android:id="@+id/atm_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
         android:layout_marginTop="5dp"
        android:layout_below="@+id/vault_branding"
        android:textColor="#3C3C3C"
         android:buttonTint="@color/primary_color"
        android:text="@string/atm_id" />
 
 
</RelativeLayout>