<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorPrimary">@color/actionbar_backgroun_color</item>
        <item name="android:editTextStyle">@style/App_EditTextStyle</item>
        <item name="android:buttonStyle">@style/App_ButtonStyle</item>
    </style>

    <style name="App_EditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@drawable/editext_backgroud</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColorHint">#FFFFFF</item>
        
    </style>

    <style name="App_ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/editext_backgroud</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>