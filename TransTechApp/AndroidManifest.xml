<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="anipr.transtech.android"
    android:versionCode="6"
    android:versionName="1.0.3" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	
    <application
        android:name="anipr.transtech.android.ApplicationClass"
        android:allowBackup="true"
        android:icon="@drawable/ic_transtech"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:logo="@drawable/ic_transtech"
        android:theme="@style/AppTheme" >
        <activity
            android:name="anipr.transtech.android.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="anipr.transtech.android.MainActivity" >
        </activity>
        <activity
            android:name="anipr.transtech.android.TaskForm"
            android:label="Survey" >
        </activity>
        <activity
            android:name="anipr.transtech.android.TaskDetails"
            android:label="TaskDetails" >
        </activity>
        <activity
            android:name="anipr.transtech.android.BaseActivity"
            android:label="@string/title_activity_base" >
        </activity>
        <activity android:name="anipr.transtech.android.AboutUsActivity" >
        </activity>
    </application>

</manifest>